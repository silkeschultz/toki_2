<style>
  .sustainability {
    background-color: rgba(186, 200, 217, 1);
    display: grid;
    grid-template-columns: 1fr 1fr;
    padding: 4rem 3rem;
    align-items: center;
    gap: 3rem;
    margin-bottom: 4rem;
  }
  .sustainability .icons {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }
  .sustainability .icons img {
    max-width: 380px;
    width: 100%;
    height: auto;
  }
  .btn {
    background-color: rgba(140, 140, 93, 1);
    padding: 0.7rem 2.4rem;
    border-radius: 40px;
    text-decoration: none;
    color: black;
    font-weight: 800;
    font-size: 1.2rem;
    display: inline-block;
  }
  .sustainability .text h2 {
    font-size: 2.8rem;
    margin-bottom: 1.5rem;
  }
  .sustainability .text p {
    font-size: 1.15rem;
    line-height: 1.7;
    margin-bottom: 1rem;
    max-width: 480px;
  }
  /* RESPONSIV */
  @media (max-width: 900px) {
    .sustainability {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .sustainability .text p {
      margin-left: auto;
      margin-right: auto;
    }
  }
