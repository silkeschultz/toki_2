    color: #fff;
  }
  .footer-column a:hover {
    text-decoration: underline;
  }

  .footer-logo {
    display: flex;
    justify-content: center;
    grid-column: 1 / -1;
  }
  .footer-logo img {
    width: 150px;
    height: auto;
    margin-top: 20px;
  }
  .footer-column h3 {
    line-height: 1.8;
    font-family: "JosefinSans";
